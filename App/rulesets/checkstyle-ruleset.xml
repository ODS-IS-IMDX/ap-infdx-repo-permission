<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--

  Checkstyle configuration that checks the sun coding conventions from:

    - the Java Language Specification at
      https://docs.oracle.com/javase/specs/jls/se11/html/index.html

    - the Sun Code Conventions at https://www.oracle.com/java/technologies/javase/codeconventions-contents.html

    - the Javadoc guidelines at
      https://www.oracle.com/technical-resources/articles/java/javadoc-tool.html

    - the JDK Api documentation https://docs.oracle.com/en/java/javase/11/

    - some best practices

  Checkstyle is very configurable. Be sure to read the documentation at
  https://checkstyle.org (or in your downloaded distribution).

  Most Checks are configurable, be sure to consult the documentation.

  To completely disable a check, just comment it out or delete it from the file.
  To suppress certain violations please review suppression filters.

  Finally, it is worth reading the documentation.

-->

<module name="Checker">
  <!--
      If you set the basedir property below, then all reported file
      names will be relative to the specified directory. See
      https://checkstyle.org/config.html#Checker

      <property name="basedir" value="${basedir}"/>
  -->
  <property name="severity" value="error"/>

  <property name="fileExtensions" value="java, properties, xml"/>

  <!-- Excludes all 'module-info.java' files              -->
  <!-- See https://checkstyle.org/filefilters/index.html -->
  <module name="BeforeExecutionExclusionFileFilter">
    <property name="fileNamePattern" value="module\-info\.java$"/>
  </module>

  <!-- https://checkstyle.org/filters/suppressionfilter.html -->
  <module name="SuppressionFilter">
    <property name="file" value="${org.checkstyle.sun.suppressionfilter.config}" default="checkstyle-suppressions.xml" />
    <property name="optional" value="true"/>
  </module>
  
  <!--コーディング規約 3.2.1対応-->
  <module name="FileTabCharacter">
    <property name="eachLine" value="true"/>
  </module>
  
  <!--コーディング規約 3.4.1対応-->
  <module name="LineLength">
    <property name="max" value="80" />
  </module>

  <!--コーディング規約 5.4.3対応-->
  <module name="FileLength">
    <property name="fileExtensions" value="java"/>
    <property name="max" value="2000"/>
  </module>
  
  <!-- Checks for Headers                                -->
  <!-- See https://checkstyle.org/checks/header/index.html   -->
  <!-- <module name="Header"> -->
  <!--   <property name="headerFile" value="${checkstyle.header.file}"/> -->
  <!--   <property name="fileExtensions" value="java"/> -->
  <!-- </module> -->

  <module name="TreeWalker">
    <!--コーディング規約 2.2.1対応-->
    <module name="PackageName">
      <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
    </module>
    <!--コーディング規約 2.4.1対応-->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />      
    </module>
    <!--コーディング規約 2.5.1対応-->
    <module name="MemberName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />      
    </module>
    <!--コーディング規約 2.5.1対応-->
    <module name="LocalVariableName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />      
    </module>
    <!--コーディング規約 2.5.4対応-->
    <module name="ConstantName">
      <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$" />
    </module>
    <!--コーディング規約 3.2.1対応-->
    <module name="Indentation">
      <property name="basicOffset" value="4" />
    </module>
    <!--コーディング規約 3.2.2対応-->
    <module name="NestedForDepth">
      <property name="max" value="4" />
    </module>
    <!--コーディング規約 3.2.2対応-->
    <module name="NestedIfDepth">
      <property name="max" value="4" />
    </module>
    <!--コーディング規約 3.2.2対応-->
    <module name="NestedTryDepth">
      <property name="max" value="4" />
    </module>
    <!--コーディング規約 3.4.2対応-->
    <module name="OneStatementPerLine"/>
    <!--コーディング規約 3.4.3対応-->
    <module name="RightCurly">
      <property name="option" value="alone"/>
      <property name="tokens" value="LITERAL_ELSE, METHOD_DEF"/>
    </module>
    <!--コーディング規約 3.6.1対応-->
    <module name="NeedBraces"/>
    <!--コーディング規約 3.6.2、6.8.3対応-->
    <module name="EmptyBlock">
      <property name="option" value="statement"/>
    </module>
    <!--コーディング規約 3.5.2、3.6.3、4.1.1対応-->
    <module name="IllegalToken">
      <property name="tokens" value="LABELED_STAT,GE,GT,SINGLE_LINE_COMMENT"/>
    </module>
    <!--コーディング規約 4.2.1対応-->
    <module name="CommentsIndentation"/>
    <!--コーディング規約 4.3.2対応-->
    <module name="MissingJavadocType"/>
    <!--コーディング規約 4.3.3対応-->
    <module name="JavadocVariable"/>
    <!--コーディング規約 4.3.4対応-->
    <module name="JavadocMethod"/>
    <!--コーディング規約 5.1.1対応-->
    <module name="OneTopLevelClass"/>
    <!--コーディング規約 5.2.1対応-->
    <module name="PackageDeclaration"/>
    <!--コーディング規約 5.3.1対応-->
    <module name="RedundantImport"/>
    <!--コーディング規約 5.3.2対応-->
    <module name="UnusedImports"/>
    <!--コーディング規約 5.3.3対応-->
    <module name="AvoidStarImport"/>
    <!--コーディング規約 5.3.4対応-->
    <module name="AvoidStaticImport"/>
  </module>
</module>
